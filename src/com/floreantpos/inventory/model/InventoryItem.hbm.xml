<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.floreantpos.inventory.model">
    <class lazy="false" name="com.floreantpos.inventory.model.InventoryItem" optimistic-lock="version"
           table="INVENTORY_ITEM">
        <id column="ID" name="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <version column="MODIFIED_TIME" name="modifiedTime" type="timestamp"/>

        <property column="NAME" length="60" name="name" not-null="true" type="java.lang.String"/>
        <property column="BARCODE" length="30" name="barcode" type="java.lang.String"/>
        <property column="PACKSIZE_DESC" length="30" name="packSizeDescription" type="java.lang.String"/>
        <property column="TOT_ITEM_PER_PACKSIZE" name="itemPerPackSize" type="java.lang.Integer"/>
        <property column="SORT_ORDER" name="sortOrder" type="java.lang.Integer"/>
        <property column="PACK_SIZE_REORDER_LEVEL" name="packSizeReorderLevel" type="java.lang.String"/>
        <property column="PACK_SIZE_REPLENISH_LEVEL" name="packSizeReplenishLevel" type="java.lang.String"/>
        <property column="DESCRIPTION" name="description" type="java.lang.String"/>
        <property column="PACKSIZE_QTY_ON_HAND" name="packSizeQuantityOnHand" type="java.lang.Integer"/>
        <property column="TOT_PACKSIZE_VALUE" name="totPackSizeValue" type="java.lang.Integer"/>
        <property column="CREATE_TIME" name="createTime" type="java.sql.Timestamp"/>
        <property column="BALANCE_TOTAL_PACKS" name="balanceTotalPacks" type="java.lang.Integer"/>
        <property column="BALANCE_TOTAL_ITEMS" name="balanceTotalItems" type="java.lang.Integer"/>
        <property column="BALANCE_TOTAL_RECEPIE_UNITS" name="balanceTotalRecepieUnits" type="java.lang.Integer"/>
        <property column="LAST_UPDATE_DATE" name="lastUpdateDate" type="java.util.Date"/>
        <property column="PURCHASE_PRICE" name="purchasePrice" type="java.lang.Double"/>
        <property column="SELLING_PRICE" name="sellingPrice" type="java.lang.Double"/>
        <property column="VISIBLE" name="visible" type="java.lang.Boolean"/>

        <many-to-one class="InventoryGroup" name="itemGroup">
            <column name="ITEM_GROUP_ID"/>
        </many-to-one>
        <many-to-one class="InventoryLocation" name="itemLocation">
            <column name="ITEM_LOCATION_ID"/>
        </many-to-one>
        <many-to-one class="InventoryVendor" name="itemVendor">
            <column name="ITEM_VENDOR_ID"/>
        </many-to-one>

    </class>
</hibernate-mapping>